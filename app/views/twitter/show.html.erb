<div class="container">
  <h3>Search Results</h3>
    <% @search_results.each do |result|  %>
      <ul class="list-unstyled">
        <dl class="dl-horizontal">
          <dt>
            <!-- use link_to? -->
            <img class="twitter-icon" src="<%= result.profile_image_uri %>">
          </dt>
          <dd>
            <strong>
              <%= result.name %>
            </strong>
            <div>
              <%= link_to "@#{result.handle}", twitter_path(result.id), class: "twitter subscribe-link", method: :post %>
            </div>
          </dd>
        </dl>
      </ul>
    <% end %>
</div>
