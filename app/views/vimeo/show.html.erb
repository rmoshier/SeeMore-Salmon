<h1>Vimeo Search Results</h1>

<h3><%= @user_info['display_name'] %></h3>

<img src="<%= @user_info['portrait_large'] %>" alt="icon" />

<%= form_tag( create_vimeo_path ) do%>
  <p>
    <%= hidden_field_tag 'vimeo_display_name', @user_info['display_name'] %>
    <%= hidden_field_tag 'vimeo_uid', @user_info['id'] %>
    <%= hidden_field_tag 'vimeo_username', @name %>
    <%= submit_tag "Subscribe" %>
  </p>
<% end %>

<p>
  <%= link_to "Back to Vimeo Search", new_vimeo_path %>
</p>
