<div class="container">
  <h1>Vimeo Search Results</h1>

  <% @users_info.each do |user| %>
    <!-- This is the user's display name -->
    <h3><%= user.name %></h3>

    <!-- Profile pic conditional display -->
    <% if user.profile_pics != nil %>
      <img src="<%= user.profile_pics["sizes"][1]["link"] %>" alt="<%= user.name %> icon" />
    <% end %>

    <%= form_tag( create_vimeo_path ) do%>
      <p>
        <%= hidden_field_tag 'subscription_uid', user.uid %>
        <%= submit_tag "Subscribe", class: 'btn btn-default' %>
      </p>
    <% end %>


  <% end %>




  <p>
    <%= link_to "Back to Vimeo Search", new_vimeo_path %>
  </p>
</div>
